{{> main }}
<nav class="navbar navbar-expand-lg bg-light"></nav>

<div class="container">
    <div class="navbar-expand">
        <ul>
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/saved">Saved Articles</a>
                <a class="btn btn-success" id="scrape-btn" href="/scrape">Scrape Your News!</a>
                <a class="btn btn-success" id="clear-btn">Clear The Articles!</a>
            </li>
        </ul>

        <div class="articles">
            {{#each data}}

            <div class="article">
                <a href="{{link}}">
                    <h3>{{title}}</h3>
                </a>
                <p>{{summary}}</p>

                <hr>

                <label>
                    Enter Your Comments Below
                    <textarea cols="30" rows="10"></textarea>
                </label>

                <button>Submit</button>
            </div>

            {{/each}}
        </div>
        {{!-- <p>{{summary}}</p> --}}
        <button class="btn btn-secondary save">Save!</button>
    </div>
</div>